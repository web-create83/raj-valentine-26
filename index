<script>
/* ---------- NO BUTTON ---------- */
const messages=[
 "Please don't do this üí≠",
 "I am yours ‚ù§Ô∏è",
 "Sorry, you can't select NO üòÜ"
];

let i=0,noScale=1,yesScale=1;

const noContainer=document.getElementById("noContainer");
const msg=document.getElementById("msg");
const noBtn=document.getElementById("noBtn");
const yesBtn=document.getElementById("yesBtn");

noContainer.onclick=()=>{
    noContainer.style.position="fixed";
    noContainer.style.left=Math.random()*(innerWidth-200)+"px";
    noContainer.style.top=Math.random()*(innerHeight-200)+"px";
    msg.innerText=messages[i++ % messages.length];

    noScale-=0.15;
    yesScale+=0.15;
    noBtn.style.transform=`scale(${noScale})`;
    yesBtn.style.transform=`scale(${yesScale})`;
};

/* ---------- YES CLICK ---------- */
yesBtn.onclick=()=>{
    if(navigator.vibrate){
        navigator.vibrate([200,100,200]);
    }

    const p1=document.getElementById("page1");
    const p2=document.getElementById("page2");

    p1.style.opacity=0;

    setTimeout(()=>{
        p1.style.display="none";
        p2.style.pointerEvents="auto";
        p2.style.opacity=1;
        startEffects();
    },1000);
};

/* ---------- EFFECTS ---------- */
function startEffects(){
    setInterval(()=>{
        const h=document.createElement("div");
        h.className="heart";
        h.innerText="‚ù§Ô∏è";
        h.style.left=Math.random()*100+"vw";
        document.body.appendChild(h);
        setTimeout(()=>h.remove(),7000);
    },300);

    setInterval(()=>{
        const s=document.createElement("div");
        s.className="sparkle";
        s.style.left=Math.random()*100+"vw";
        s.style.top=Math.random()*100+"vh";
        document.body.appendChild(s);
        setTimeout(()=>s.remove(),2000);
    },400);

    for(let i=0;i<160;i++){
        const c=document.createElement("div");
        c.className="confetti";
        c.style.left=Math.random()*100+"vw";
        c.style.background=`hsl(${Math.random()*360},100%,50%)`;
        document.body.appendChild(c);
        setTimeout(()=>c.remove(),4000);
    }
}

/* ---------- SLIDESHOW ---------- */
const images=[
 "https://media.tenor.com/__iEnCX1420AAAAm/i-love-you-love-you.webp",
 "https://media.tenor.com/r21VpnHTN44AAAAM/i-love-you-love.gif",
 "https://media.tenor.com/zhnbS6DI_60AAAAi/djnitish97-hug.gif"
];
let idx=0;
const slide=document.getElementById("slide");

setInterval(()=>{
    idx=(idx+1)%images.length;
    slide.src=images[idx];
},3500);
</script>

